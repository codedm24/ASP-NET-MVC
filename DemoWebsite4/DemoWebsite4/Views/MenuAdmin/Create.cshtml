@model DemoWebsite4.Models.Menu1

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_Layout.cshtml";
    var menucards = ViewBag.MenuCards;
    // foreach(var menucard in menucards)
    //     Console.WriteLine(menucard.Title);
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <input type="hidden" name="MenuId" value="@Model.MenuId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Title</label>
                <input asp-for="Text" name="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" name="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="Active" asp-for="Active" value="true" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label">Order</label>
                <input asp-for="Order" name="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type</label>
                <input asp-for="Type" name="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label">Day</label>
                <input asp-for="Day" name="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuCardId" class="control-label">MenuCard</label>
               <select asp-for="MenuCardId" name="MenuCardId" size="2" class="form-control"  asp-items="@((IEnumerable<SelectListItem>)menucards)">
                    <option value="" selected="selected">Select a menu card</option>
                    @foreach (var menucard in menucards)
                    {
                        <option value="@menucard.Value">@menucard.Text</option>    
                    }
                </select>
               @* @Html.DropDownListFor(m => m.MenuCardId, (SelectList)menucards, "Select a menu card") *@
            </div>
            <input type="hidden" name="Active" value="false" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div> adapter 

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
